extend login-layout

block content
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          .container-fluid
            a.navbar-brand(href='/')
              | Home
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/register')
              span.glyphicon.glyphicon-user
              |  Register
    main
      .cotainer.justify-content-center.col-md-8.card.col-md-offset-2
              .card-header.h2 Login
              form#form_id.card-body(method='post' name='login')
                  .form-group.row
                    label.col-md-4.col-form-label.text-md-right User Name :
                    .col-md-6
                      input#username.form-control(type='text' name='username' required)
                  .form-group.row
                    label.col-md-4.col-form-label.text-md-right Password :
                    .col-md-6
                      input#password.form-control(type='password' name='password' required)
                  #error-messages(style='color:red')
                  .form-group.row
                  input#submit.btn.pull-right(type='button' value='Login' onclick='validate()')